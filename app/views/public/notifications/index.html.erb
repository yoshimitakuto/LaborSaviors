<div class='container mt-5'>

  <!--ページタイトル-->
  <div class='row mb-5'>
    <h4>通知</h4>（全<%= @notifications.count %>件）
  </div>

  <!--データ表示-->
  <% if @notifications.present? %>
    <div class='row mb-3'>
      <%= link_to "全削除", notification_path(@notifications), method: :delete, data: { confirm: "全て削除します。よろしいですか？" }, class: 'btn btn-light btn-sm' %>
    </div>
    <div class='row justify-content-center'>
      <% @notifications.each do |notification| %>
        <table class='table notification-background'>
          <tbody>
            <tr>
              <td><%= render "#{notification.action_type}", notification: notification %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  <% else %>
    <h5>通知はありません</h5>
  <% end %>

</div>

