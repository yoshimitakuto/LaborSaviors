<h4>通知</h4>
<% if @notifications.present? %>
  <%= link_to "全削除", notification_path(@notifications), method: :delete, class: 'btn btn-light btn-sm' %>
  <% @notifications.each do |notification| %>
    <%= render "#{notification.action_type}", notification: notification %>
  <% end %>
<% else %>
    通知はありません
<% end %>
