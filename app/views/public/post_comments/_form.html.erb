<!--ログイン中のユーザーのみがアクションできるように制限-->
<% if user_signed_in? %>
  <%= form_with model: [post, post_comment], local: false do |f| %>
    <div>
      <%= f.text_area :comment, :size =>"100x15", placeholder: "こちらから救世コメントを投稿しよう！", class: 'form-control' %>
    </div>
    <div class='text-center mt-3'>
      <%= f.submit "救世する", class: 'btn btn-info' %>
    </div>
  <% end %>
<% else %>
  <%= link_to "ログイン後にコメントできます", new_user_session_path %>
<% end %>
