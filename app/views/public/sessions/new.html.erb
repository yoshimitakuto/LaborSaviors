<div class='container mt-5'>

  <!--ページタイトル-->
  <div class='row justify-content-center mb-5'>
    <h2><strong>Login</strong></h2>
  </div>

  <!--ログイン情報入力フォーム（名前・パスワードのみ）-->
  <div class='row justify-content-center mb-5'>
    <div class='col-md-4'>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class='row form-field mb-3 was-validated'>
          <div class='col'><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'form-control', placeholder: "nickname", required: true %></div>
        </div>
        <div class='row form-field mb-3 was-validated'>
          <div class='col'><%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "password", required: true %></div>
        </div>
        <div class='actions text-center'>
          <%= f.submit "ログイン", class: 'form-control btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row justify-content-center mb-5'>
    <h5><%= link_to "Signup", new_registration_path(resource_name), class: 'link' %> 👋</h5>
  </div>

</div>
