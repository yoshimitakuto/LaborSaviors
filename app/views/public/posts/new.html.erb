<div class='container'>
  <%= form_with model: @post do |f| %>
    <%= render "layouts/error_messages", model: @post %>
    <div class='row'>
      <%= f.label :category_id %>
      <%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: "選択して下さい")  %>
    </div>
    <div class='row'>
      <%= f.label :mental_status %>
      <%= f.select :mental_status, [
        ["豆腐メンタルです。優しめにお願いします。", "豆腐メンタルです。優しめにお願いします。"],
        ["こんにゃくメンタルです。柔軟にお願いします。", "こんにゃくメンタルです。柔軟にお願いします。"],
        ["鋼メンタルです。強めでお願いします。", "鋼メンタルです。強めでお願いします。"]
       ], include_blank: "選択して下さい" %>
    </div>
    <div class='row'>
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    <div class='row'>
      <%= f.hidden_field :is_resolution, value: false %>
      <%= f.submit "救世神へ届け", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
