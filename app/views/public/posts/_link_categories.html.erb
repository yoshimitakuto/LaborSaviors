<div class='card category-lists text-center'>
  <div class='card-header'>
    カテゴリから探す
  </div>
  <div class='card-body'>
    <% categories.each do |category| %>
      <p>
        <%= link_to "#{category.name}", category_search_post_path(category), class: 'body-link' %>
      </p>
    <% end %>
  </div>
</div>