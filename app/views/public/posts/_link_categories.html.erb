<div class='card category-lists text-center'>
  <div class='card-header category-header btn btn-info'>
    カテゴリから探す
  </div>
  <div class='card-body category-body'>
    <% categories.each do |category| %>
      <p>
        <%= link_to "#{category.name}", category_search_post_path(category), class: 'body-link' %>
      </p>
    <% end %>
  </div>
</div>

<script>
  $(function(){
    $('.category-header').on('click', function(){
      $('.category-body').slideToggle();
    });
  })
</script>