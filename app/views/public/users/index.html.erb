<div class='container mt-5'>

  <!--ページタイトル-->
  <div class='row justify-content-center mb-3'>
    <h4><strong>救世神一覧</strong></h4>
  </div>

  <div class='row justify-content-center mb-5'>
    全<%= @users.total_count %>名
  </div>

  <!--一覧表示-->
  <div class='mb-5'>
    <div class='row justify-content-center text-center'>
    <% @users.each do |user| %>
      <div class='col-md-3 mb-4'>
        <div class='mb-2 active-rotate'>
          <%= link_to user_show_path(user.id) do %>
            <%= image_tag user.get_profile_image(250,250), class: 'profile_image' %>
          <% end %>
        </div>
        <!--z-indexにより初期状態は非表示-->
        <div class='user-info'>
          <p>評価値：<%= user.post_comments.average(:evaluation) || 0 %> / 5.0</p>
        </div>
        <div>
          <%= user == current_user ? "あなた" : user.nickname %>
        </div>
        <div>
          Lv:<%= user.level %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class='row justify-content-center mb-5'>
    <%= paginate @users %>
  </div>

</div>
