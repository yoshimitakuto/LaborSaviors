<div class='card ranking-card'>
  <div class='card-header text-center'>救世神ランキング</div>
  <div class="card-body text-center">
    <table class='table'>
      <thead>
        <tr>
          <th>順位</th>
          <th>ユーザー</th>
          <th>評価</th>
        </tr>
      </thead>
      <% rank.each.with_index(1) do |rank, i| %>
      <tbody>
        <tr>
          <!--ランキング形式のため1位〜3位は冠アイコン付きの条件分岐-->
          <!--ニックネーム表示はログイン中ユーザーとそれ以外で表示名分岐-->
          <% if i == 1 %>
            <td>
              <div>
                <%= image_tag 'Gold_icon.jpg', size: '30x30' %><%= i %>位
              </div>
            </td>
            <td>
              <%= link_to user_show_path(rank), class: 'link' do %>
                <%= image_tag rank.get_profile_image(20,20), class: 'profile_image' %> <%= rank == current_user ? 'あなた' : rank.nickname %>
              <% end %>
            </td>
            <td><%= rank.post_comments.average(:evaluation) || 0 %></td>
          <% elsif i == 2 %>
            <td><%= image_tag 'Silver_icon.jpg', size: '30x30' %><%= i %>位</td>
            <td>
              <%= link_to user_show_path(rank), class: 'user-link' do %>
                <%= image_tag rank.get_profile_image(20,20), class: 'profile_image' %> <%= rank == current_user ? 'あなた' : rank.nickname %>
              <% end %>
            </td>
            <td><%= rank.post_comments.average(:evaluation) || 0 %></td>
          <% elsif i == 3 %>
            <td><%= image_tag 'Blonze_icon.jpg', size: '30x30' %><%= i %>位</td>
            <td>
              <%= link_to user_show_path(rank), class: 'user-link' do %>
                <%= image_tag rank.get_profile_image(20,20), class: 'profile_image' %> <%= rank == current_user ? 'あなた' : rank.nickname %>
              <% end %>
            </td>
            <td><%= rank.post_comments.average(:evaluation) || 0 %></td>
          <% else %>
            <td><%= i %>位</td>
            <td>
              <%= link_to user_show_path(rank), class: 'user-link' do %>
                <%= image_tag rank.get_profile_image(20,20), class: 'profile_image' %> <%= rank == current_user ? 'あなた' : rank.nickname %>
              <% end %>
            </td>
            <td><%= rank.post_comments.average(:evaluation) || 0 %></td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>