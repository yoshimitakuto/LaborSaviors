<div class="container mt-5">

  <!--ページタイトル-->
  <div class="mx-auto mb-5 text-center">
    <!--ユーザーのにより表示を条件分岐-->
    <h4><strong><%= @user == current_user ? "マイページ" : "#{@user.nickname}の詳細ページ" %></strong></h4>
  </div>

  <!--投稿詳細表示フォーム-->
  <div class="mb-3 text-center">
    </p><%= image_tag @user.get_profile_image(100,100) %>：<%= @user.nickname %></p>
  </div>

  <div class="mb-3 text-center">
    <p>救世レベル：「後ほど表示」</p>
  </div>

  <div class="mb-5 text-center">
    <span>お悩み投稿数：<%= @post_count %>件</span>
    <span>救世コメント数：<%= @comment_reply_count %>件</span>
    <span>お悩み投稿へのいいね獲得数：<%= @post_likes_count %>件</span>
    <span>救世コメントへのいいね獲得数：<%= @comment_likes_count %>件</span>
  </div>

  <!--chartkick表示-->
  <div class='row text-center'>
    <div class="col-md-6">
      <div>
        <h6>【1週間の推移】</h6>
      </div>
      <%= line_chart @chart, id: 'chart', xtitle: "日付", ytitle: "数", colors: ["#b00", "blue", "#666"] %>
    </div>
    <div class="col-md-6">
      <div>
        <h6>【総合比率】</h6>
      </div>
      <div>
        <%= pie_chart [['救世', @comment_reply_count],['お悩み', @post_count]], id: 'pie_chart', colors: ["#b00", "#666"], donut: true %>
      </div>
   </div>
  </div>

  <!--ログインユーザーの場合で条件分岐-->
  <% if @user == current_user %>
    <div class='row'>
      <div class='col-md-6 mx-auto mt-5 text-center'>
        <%= link_to "情報編集", information_path(@user.id), class: 'btn btn-info btn-sm mr-2' %>
        <%= link_to "退会画面へ",  check_path(@user.id), class: 'btn btn-danger btn-sm' %>
      </div>
    </div>
  <% end %>

</div>
