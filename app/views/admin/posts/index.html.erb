<div class="container mt-5">

  <!--ページタイトル-->
  <div class="mx-auto mb-5 text-center">
    <h4><strong>お悩み投稿一覧</strong></h4>
  </div>

  <div class="mx-auto mb-5 text-center">
    <p>コメント総数：<%= @posts.count %>件</p>
  </div>

  <!--一覧表示-->
  <table class='table table-bordered border-dark table-hover align-middle'>
    <thead>
      <tr align='center'>
        <th>プロフィール画像</th>
        <th>ニックネーム</th>
        <th>投稿内容（カテゴリー・メンタルステータス含む）</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td align='center'>
          <%= link_to admin_user_path(post.user.id) do %>
            <%= image_tag post.user.get_profile_image(50,50), class: 'profile_image' %>
          <% end %>
        </td>
        <td align='center'><%= post.user.nickname %></td>
        <td>
          <div>メンタルステータス：<%= post.mental %></div>
          <div class='mb-3'>カテゴリ：<%= post.category.name %></div>
          <div>
            <div>【投稿内容】</div>
            <div><%= post.content %></div>
          </div>
        </td>
        <td>
          <%= link_to admin_post_path(post), method: :delete do %>
            <i class="fa-solid fa-trash-can fa-lg" style="color: #f90101;"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
